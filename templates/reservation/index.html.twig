{# templates/reservation/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Réserver une chambre{% endblock %}

{% block body %}
    <h1>Réserver une chambre</h1>

    <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
        <div class="booking-form">
            <h3>Booking Your Hotel</h3>
            {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="form-group">
                {{ form_label(form.arrival_date, 'Check In:', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.arrival_date, {'attr': {'class': 'form-control date-input'}}) }}
                <i class="icon_calendar"></i>
            </div>
            <div class="form-group">
                {{ form_label(form.departure_date, 'Check Out:', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.departure_date, {'attr': {'class': 'form-control date-input'}}) }}
                <i class="icon_calendar"></i>
            </div>
            <div class="select-option">
                <label for="room">Rooms:</label>
                <select id="guest" class="form-control">
                    <option value="">Premium King Room</option>
                    <option value="">Deluxe Room</option>
                    <option value="">Double Room</option>
                    <option value="">Luxury Room</option>
                    <option value="">Room with view</option>
                    <option value="">Small View</option>
                </select>
            </div>
            <div class="form-group">
                {{ form_label(form.nb_nights, 'Number of nights:', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.nb_nights, {'attr': {'class': 'form-control', 'placeholder': 'Add number of nights'}}) }}
            </div>
            <div class="select-option">
                <label for="room">Services:</label>
                <select id="guest" class="form-control">
                    <option value="">Travel Plan</option>
                    <option value="">Catering Service</option>
                    <option value="">Baby Sitting</option>
                    <option value="">Laundry</option>
                    <option value="">Hire driver</option>
                    <option value="">Bar & Drink</option>
                </select>
            </div>
            {{ form_widget(form.editer, {'label': 'Réserver', 'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
