{% extends 'adminbase.html.twig' %}

{% block title %}Hello AdminController!
{% endblock %}

{% block body %}
<div
        class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">

        <ol>
            <a href="">
                <i class="fa fa-dashboard"></i>
                Home</a>
        </ol>
    </section>

                <div class="box-body">
                    <h1>Show Admin</h1>

                    <h1>Admin</h1>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ admin.id }}</td>
                        </tr>
                        <tr>
                            <th>FirstName</th>
                            <td>{{ admin.firstname }}</td>
                        </tr>
                        <tr>
                            <th>LastName</th>
                            <td>{{ admin.lastname }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ admin.email }}</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>{{ admin.password }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('app_admins_index') }}">back to list</a>

                    <a href="{{ path('app_admins_edit', {'id': admin.id}) }}">edit</a>

                    <form method="post" action="{{ path('app_admins_delete', {'id': admin.id}) }}" onsubmit="return confirm('Are you sure you want to delete this client?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ admin.id) }}">
                        <button class="btn">Delete</button>
                    </form>
                </div><!-- /.box-body -->

            </div><!-- /.box -->

{% endblock %}